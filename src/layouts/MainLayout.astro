---
import '../assets/styles/style.css'
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <style>
            svg {
                width: 1em;
                height: 1em;
                color: currentColor;
            }
        </style>
    </head>

    <body class={`relative`}>
        <div class="above-content sr-only focus:not-sr-only">
            <a
                class="skip-link text-xs text-center block wrap-sm underline"
                href="#main">Skip to content</a
            >
        </div>
        <slot />
    </body>
</html>
