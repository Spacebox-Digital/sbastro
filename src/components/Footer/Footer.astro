---
import SpaceboxLogo from '@assets/images/SpaceboxLogoLockupLight.astro'

const year = new Date().getFullYear()
---

<footer id="footer" class="bg-[#C1D7D2] pt-24 pb-6 h-[500px]">
    <div id="inner-footer" class="wrap-xl mx-auto px-4 lg:px-0 flex flex-col h-full items-center justify-center text-center">
        <div class="footer-logo mb-6">
            <a href="/" aria-label="Spacebox Home">
                <SpaceboxLogo width="w-96" />
            </a>
        </div>
        <div class="footer-contact">
            <p><a href="mailto:hello@spacebox.digital" class="text-sb-green-500 hover:text-sb-green-600">hello@spacebox.digital</a></p>
        </div>
        <div class="footer-copyright my-6 mt-auto">
            <p class="text-sm text-sb-space-blue-700" >&copy; {year} Spacebox Digital LLC. All rights reserved.</p>
        </div>
    </div>
</footer>
