---
import { log } from "node_modules/astro/dist/core/logger/core"
import { parseHTML, sbTextColors } from '@utils/utils.js'
const { module } = Astro.props

console.log('module in heading', module)
let active
let heading
let headingTag
let Element
let textColor
let textClass
let marginTop
let marginBottom
let marginClass
let textAlign

if (module) {
    active = module.active
    heading = module.heading
    headingTag = module.headingTag
    Element = headingTag
    textColor = module.textColor.toLowerCase()

    marginTop = `mt-${module.marginTop}`
    marginBottom = `mb-${module.marginBottom}`
    textAlign = `${module.textAlign}`

    textClass = sbTextColors[textColor] + ' ' + textAlign + ' ' + marginTop + ' ' + marginBottom
}

---

{
    active && (
        <Element class={textClass}>
            {heading}
        </Element>
    )
}
